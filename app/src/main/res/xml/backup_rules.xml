<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for ZimbaBeats - Android 11 and below
   See https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!-- Include all shared preferences (DataStore, settings) -->
    <include domain="sharedpref" path="." />

    <!-- Include all databases (playlists, favorites, history) -->
    <include domain="database" path="." />

    <!-- Include files (downloaded content metadata) -->
    <include domain="file" path="." />
</full-backup-content>
