<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for ZimbaBeats - Android 12+
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <!-- Cloud backup (Google Backup) -->
    <cloud-backup>
        <!-- Include all shared preferences (DataStore, settings, pairing info) -->
        <include domain="sharedpref" path="." />

        <!-- Include all databases (playlists, favorites, history) -->
        <include domain="database" path="." />

        <!-- Include files (downloaded content metadata) -->
        <include domain="file" path="." />
    </cloud-backup>

    <!-- Device-to-device transfer -->
    <device-transfer>
        <!-- Include all shared preferences -->
        <include domain="sharedpref" path="." />

        <!-- Include all databases -->
        <include domain="database" path="." />

        <!-- Include files -->
        <include domain="file" path="." />
    </device-transfer>
</data-extraction-rules>
